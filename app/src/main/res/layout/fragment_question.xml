<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.QuestionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Câu hỏi-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                android:minHeight="100dp"
                app:cardCornerRadius="30dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_STTCauHoi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Câu 1:"
                        android:textColor="@color/purple_200"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/tv_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="10dp"
                        android:padding="30dp"
                        android:text="Câu hỏi"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <!--A-->
            <androidx.cardview.widget.CardView
                style="@style/custom_answer_CardView"
                app:cardCornerRadius="40dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_answerA"
                        style="@style/custom_answer_tvAnswer"
                        android:text="A" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <!--B-->
            <androidx.cardview.widget.CardView
                style="@style/custom_answer_CardView"
                app:cardCornerRadius="40dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_answerB"
                        style="@style/custom_answer_tvAnswer"
                        android:text="B" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <!--C-->
            <androidx.cardview.widget.CardView
                style="@style/custom_answer_CardView"
                app:cardCornerRadius="40dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_answerC"
                        style="@style/custom_answer_tvAnswer"
                        android:text="C" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <!--D-->
            <androidx.cardview.widget.CardView
                style="@style/custom_answer_CardView"
                app:cardCornerRadius="40dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_answerD"
                        style="@style/custom_answer_tvAnswer"
                        android:text="D" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>